<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <!-- Declare your variables here -->
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/work_together"
            app:layout_constraintTop_toBottomOf="@+id/btn_skip"
            android:layout_marginTop="-10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitStart"
            android:paddingTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Giao diện thân thiện"
            android:textSize="34sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorTextPrimary"
            app:layout_constraintBottom_toTopOf="@+id/textdesc"
            android:paddingBottom="20dp"
            />


        <TextView
            android:id="@+id/textdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:layout_margin="34dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorTextPrimary"
            android:text="Giao diện người dùng được thiết kế tối giản, dễ hiểu và dễ sử dụng. "
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/btnNext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            android:layout_margin="24dp"
            android:drawableLeft="@drawable/next_circle"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            android:textAppearance="@android:style/TextAppearance"
            android:text="@string/skip_text_underlined"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="42dp"
            android:text="Vuốt để tiếp tục"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>